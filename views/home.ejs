  <textarea name="content" id="" cols="30" rows="5"></textarea>
  <input type="submit" value="Post" />
</form>
<% } %> 

<% for(post of posts){ %>
    <li>
        <%= post.content %> 
        <br>
        <%= post.user.name %> 
    </li>
<% } %>
