<link rel="stylesheet" href="/css/home.css" />

<h1>Codeial <%= title %></h1>

<h3>Posts</h3>
<% if(locals.user){ %>
<form action="/posts/create" method="POST">
  <textarea name="content" id="" cols="30" rows="5"></textarea>
  <input type="submit" value="Post" />
</form>
<% } %> 

<% for(post of posts){ %>
    <li>

        <% if(locals.user && locals.user.id == post.user.id){ %>

            <a href="/posts/destroy/<%= post._id %>">X</a>

        <% } %> 
        <%= post.content %> 
        <br>
        <%= post.user.name %> 

        <% if(locals.user){ %> 

            <form action="/comments/create" method="POST">
                <input type="text" name="content" id="">
                <input type="hidden" name="post" value="<%= post._id %>">
                <input type="submit" value="Comment" id="">
            </form>

        <% } %> 

        <% for(comment of post.comments){ %> 
            

            <p><% if(locals.user && locals.user.id == comment.user.id){ %>

                <a href="/comments/destroy/<%= comment._id %>">x</a>
    
            <% } %> 
            <%= comment.content %> </p>
            <p><%= comment.user.name %> </p>
        <% } %> 

    </li>
<% } %>

<hr>
<% if(locals.user){ %> 
    <% for (u of all_users){ %>
        <li>
            <a href="/users/profile/?user_id=<%= u._id %>"><%= u.name %> </a>
        </li>
    <% } %> 
<% } %> 
